<!-- 発展課題 -->

<div class="col-xs-8" id="users-content">
	<div class="user-info">
		<% if notice %>
			<!-- ここでflashを表示してます -->
			<div class="alert alert-info"><%=notice%></div>
		<% end %>
		<span class="user-name">
			<!-- ユーザーのemailを表示 -->
			<%= @user.email %>
		</span>
	</div>
	<ul class="nav nav-tabs nav-justified">
		<li {class: action_name == "show" ? "active" : nil}>
			<%= link_to user_path(@user) do %>
				<div class="text">
					つぶやき
				</div>
				<div class="num">
					<!-- ユーザーのツイートを数えて表示 -->
					<%= @user.tweets.count %>
				</div>
			<% end %>	
		</li>		
		
		<li {class: action_name == "favorites" ? "active" : nil}>
		<%= link_to favorites_user_path(@user) do %>
			<div class="text">
				お気に入り
			</div>
			<div class="num">
				<!-- ユーザーのお気に入りを数えて表示 -->
				<%= @user.favorites.count %>
			</div>
		<% end %>
		</li>
	</ul>
	<div class="list-group">
		<div class="list-group-item">
			<% if @user.tweets.empty? %>
				まだツイートはありません
			<% end %>
		</div>

		<!-- ユーザーに紐付いたツイートを取得し、eachメソッドでツイート分表示 -->
		<% @user.tweets.each do |t| %>
			<div class="list-group-item">
				<h4 class="user">
					<span class="user-name">
						<!-- link_toを使用しユーザーページへのリンクを作る -->
						<%= link_to t.user.email, user_path(t.user) %>
					</span>
					<span class="time pull-right">
						<%= distance_of_time_in_words_to_now(t.created_at) %>
					</span>
					<div class="clear"></div>
				</h4>
				<div class="tweet-content">
					<p>
						<!-- ツイートのcontentを表示 -->
						<%= t.content %>
					</p>
				</div>
			</div>
		<% end %>
	</div>	
</div>
